<div class="navbar-inverse navbar-fixed-top">
      <div class="navbar-header pull-left">
        <a class="navbar-brand hidden-xs" href="/">Video</a>
      </div>
      <div class="navbar-header pull-right rightside">
            <% if signed_in? %>
            <p class="navbar-text navbar-right signed-in">Welcome, <%=current_user.name%>&nbsp;&nbsp;&nbsp;&nbsp;
              <%=image_tag("http://www.gravatar.com/avatar.php?gravatar_id=#{Digest::MD5::hexdigest(current_user.email)}", :alt => 'Avatar', :class => 'avatar',  wdith: "50px", height: "50px")%>
                <%= link_to "Sign out", signout_path, method: "delete", class: 'sign-link' %>
              </p>
            <% else %>
            <ul class="nav navbar-nav nav-style-list"><li>
              <%= link_to "Sign up", signup_path, class: 'sign-link'%>
            </li><li>
              <%= form_for(:session, url: sessions_path, class: 'navbar-form', role: 'login') do |f| %>
                  <%= f.text_field :email, placeholder: "Email"%>
                  <%= f.password_field :password, placeholder: "Password" %>
                  <%= f.submit "Sign in", class: "btn btn-default navbar-btn" %>
                <% end %></li>
              </ul>
            <% end %>
        </div>
        
</div>